# ======================
# GDASH - Environment Variables
# ======================

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# MongoDB Configuration
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_DATABASE=gdash
MONGO_USERNAME=admin
MONGO_PASSWORD=admin123
MONGO_URI=mongodb://admin:admin123@mongodb:27017/gdash?authSource=admin

# API Configuration
API_HOST=nestjs-api
API_PORT=3000
API_BASE_URL=http://nestjs-api:3000

# Frontend Configuration
VITE_API_URL=http://localhost:3000

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h

# Default User (created automatically on startup)
DEFAULT_USER_EMAIL=admin@example.com
DEFAULT_USER_PASSWORD=123456
DEFAULT_USER_USERNAME=Admin

# OpenWeatherMap API (para coleta de dados reais)
OPENWEATHER_API_KEY=your_api_key_here
OPENWEATHER_CITIES=São Paulo,Rio de Janeiro,Brasília,Salvador,Fortaleza

# OpenAI API (para insights de IA)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4.1-mini
OPENAI_VECTOR_STORE_ID=

# Collector Configuration
COLLECTOR_INTERVAL=300

# Node Environment
NODE_ENV=development
