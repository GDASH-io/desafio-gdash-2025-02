# Backend Configuration
PORT=3000
NODE_ENV=production
MONGO_URI=mongodb://mongo:27017/climate-sync
JWT_SECRET=your_super_secure_jwt_secret_key_change_this
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=123456

# MongoDB Configuration
MONGO_INITDB_DATABASE=climate-sync

# RabbitMQ Configuration
RABBITMQ_USER=admin
RABBITMQ_PASS=admin
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_QUEUE=weather.data
RABBITMQ_VHOST=/
# AMQP URL constructed from above parts for services that need full URL
RABBITMQ_URL=amqp://admin:admin@rabbitmq:5672/

# Worker/Producer Configuration
LATITUDE=-23.64683
LONGITUDE=-46.45510
COLLECTION_INTERVAL_MINUTES=60

# Python API (for Go Worker)
PYTHON_API_URL=http://python-producer:5000/weather
