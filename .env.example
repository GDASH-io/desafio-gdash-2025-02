# ============================================
# Configurações Gerais
# ============================================
NODE_ENV=development

# ============================================
# MongoDB
# ============================================
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=admin123
MONGO_DATABASE=gdash

# ============================================
# RabbitMQ
# ============================================
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123

# ============================================
# Backend NestJS
# ============================================
PORT=3000
MONGODB_URI=mongodb://admin:admin123@localhost:27017/gdash?authSource=admin
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Usuário admin padrão (criado automaticamente)
ADMIN_EMAIL=admin@gdash.io
ADMIN_PASSWORD=admin123

# OpenAI (opcional - para insights avançados)
OPENAI_API_KEY=

# ============================================
# Frontend
# ============================================
VITE_API_URL=http://localhost:3000/api

# ============================================
# Python Collector (Coleta de Dados Climáticos)
# ============================================
# Provedor: 'open-meteo' ou 'openweather'
WEATHER_API_PROVIDER=open-meteo

# API Key (necessário apenas para OpenWeather)
WEATHER_API_KEY=

# Cidade e coordenadas
CITY_NAME=Maceió, BR
LATITUDE=-9.5713
LONGITUDE=-36.7820

# Configuração RabbitMQ
RABBITMQ_QUEUE=weather.readings

# Intervalo de coleta em segundos (3600 = 1 hora)
PULL_INTERVAL_SECONDS=3600

# ============================================
# Go Worker
# ============================================
# URL da API NestJS (dentro do Docker use: http://api:3000)
API_BASE_URL=http://api:3000
API_WEATHER_INGEST_PATH=/api/weather/logs

# Número máximo de tentativas antes de desistir
MAX_RETRIES=3

