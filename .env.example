# ========================================
# GENERAL
# ========================================
NODE_ENV=development

# ========================================
# MONGODB
# ========================================
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=admin123
MONGO_DATABASE=gdash_weather
MONGO_PORT=27017

# ========================================
# RABBITMQ
# ========================================
RABBITMQ_USER=gdash
RABBITMQ_PASSWORD=gdash123
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_QUEUE_NAME=weather_data_queue
RABBITMQ_EXCHANGE_NAME=weather_exchange
RABBITMQ_ROUTING_KEY=weather.data

# ========================================
# API (NestJS)
# ========================================
API_PORT=4000
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Groq API (Free - https://console.groq.com)
GROQ_API_KEY=gsk_your_groq_api_key_here

# Default User (created automatically on startup)
DEFAULT_USER_EMAIL=admin@example.com
DEFAULT_USER_PASSWORD=123456
DEFAULT_USER_NAME=Admin User

# ========================================
# QUEUE WORKER (Go)
# ========================================
WORKER_MAX_RETRIES=3

# ========================================
# WEATHER COLLECTOR (Python)
# ========================================
# Open-Meteo API (Free, no key required)
WEATHER_API_URL=https://api.open-meteo.com/v1/forecast

# Location (Example: São Paulo, Brazil)
LOCATION_CITY=São Paulo
LOCATION_STATE=SP
LOCATION_COUNTRY=BR
LOCATION_LATITUDE=-23.5505
LOCATION_LONGITUDE=-46.6333

# Collection interval in minutes (default: 60 = 1 hour)
COLLECTION_INTERVAL_MINUTES=60

# ========================================
# FRONTEND (React)
# ========================================
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:4000
