# ========================================
# .env.docker - PRODUÇÃO/DOCKER
# ========================================

# Application
NODE_ENV=production
PORT=3000

# MongoDB - DOCKER (usa nome do container)
MONGODB_URI=mongodb://root:example@mongodb:27017/weather?authSource=admin

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Admin User (criado automaticamente na inicialização)
ADMIN_NAME=Administrator
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=123456

# Groq API (para insights com IA)
GROQ_API_KEY=${GROQ_API_KEY}