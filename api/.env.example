# ========================================
# .env.example
# Copie este arquivo para .env e configure
# ========================================

# Application
NODE_ENV=development
PORT=3333

# MongoDB
# LOCAL: mongodb://root:example@localhost:27017/weather?authSource=admin
# DOCKER: mongodb://root:example@mongodb:27017/weather?authSource=admin
MONGODB_URI=mongodb://root:example@localhost:27017/weather?authSource=admin

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Admin User (criado automaticamente na inicialização)
ADMIN_NAME=Administrator
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=123456

# Groq API (para insights com IA)
GROQ_API_KEY=your-groq-api-key-here